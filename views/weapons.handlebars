<h3>Add New Weapons</h3>
<form name='add_weapon' action='/weapons' method='post'>
	Name:<br>
	<input type='text' name='name'><br>
	Power:<br>
	<input type='number' name='power' min='1' max='10'><br>
	<input type='submit' id='weapon_submit' value='Add Weapon'>
</form>
<br>
<h3>Current Weapons</h3>
<table>
	<thead>
		<th>Name</th>
		<th>Power</th>
	</thead>
	<tbody>
		{{#each weapons}}
		<tr>
			<td>{{name}}</td>
			<td>{{power}}</td>
			<td><button onclick='deleteWeapon({{id}})'>Delete</button></td>
			<td><a href='/weapons/{{id}}'>Update</a></td>
		</tr>
		{{/each}}
	</tbody>
</table>